<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnotadorGymApp.PopUp.BuscarEjerciciosPopUp"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" Padding="10" BackgroundColor="{DynamicResource CardBackground}">

    <Grid Padding="0" WidthRequest="350" BackgroundColor="{DynamicResource CardBackground}" RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
        <Border Style="{DynamicResource BorderWithShadowStyle}" Grid.Row="0">
            <Entry x:Name="EjerciciosSearchBar"
                    Placeholder="Buscar Ejercicio..."
                    TextChanged="EjerciciosSearchBar_TextChanged"
                    TextColor="{DynamicResource PrimaryTextColor}"
                    PlaceholderColor="{DynamicResource DisabledTextColor}"
                    FontSize="14" BackgroundColor="Transparent" Margin="0"/>

        </Border>
        <ScrollView Grid.Row="1" BackgroundColor="Transparent" Margin="-10">
            <Grid RowDefinitions="Auto,Auto">
                <CollectionView x:Name="FiltradosCollectionView" ItemsSource="{Binding FiltradosEjercicios}" Grid.Row="0"
                                SelectionChanged="FiltradosCollectionView_SelectionChanged" SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="-5" BackgroundColor="Transparent" Padding="10">
                                <Label Text="{Binding Name}" Style="{DynamicResource SubHeadline}" FontSize="10"></Label>
                                <BoxView HeightRequest="1" Margin="0,2"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
        
                <CollectionView x:Name="SeleccionadosCollectionView" Margin="0" Grid.Row="1" BackgroundColor="Transparent">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" Margin="0">
                                <Border Style="{DynamicResource BorderWithShadowStyle}" Margin="0" Padding="0">
                                    <Grid ColumnSpacing="10" ColumnDefinitions="*,Auto" Padding="8">
                                        <Label Text="{Binding Name}" Style="{DynamicResource SubHeadline}" FontSize="10" VerticalOptions="Center" MaxLines="3" Grid.Column="0"></Label>
                                        <Button Text="âœ•" HorizontalOptions="End" Padding="0" VerticalOptions="Center" HeightRequest="22" WidthRequest="22" Grid.Column="1"
                                               Clicked="BorrarEjercicio_Clicked" />
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>
        
        <HorizontalStackLayout Spacing="10" Padding="0" HorizontalOptions="Center" Grid.Row="2">
            <Button x:Name="AceptarButton" Text="Aceptar" Clicked="AceptarButton_Clicked"></Button>
            <Button x:Name="CancelarButton" Text="Cancelar" Clicked="CancelarButton_Clicked"></Button>
        </HorizontalStackLayout>
    </Grid>
</toolkit:Popup>