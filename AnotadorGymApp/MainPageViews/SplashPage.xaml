<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnotadorGymApp.MainPageViews.SplashPage"
             Title="SplashPage" BackgroundColor="Black" Shell.NavBarIsVisible="False">
    <Grid BackgroundColor="Black">
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20" BackgroundColor="Black">
            <!-- Logo o Icono -->
            <Image  Source="splash.svg" 
                    Aspect="AspectFit"
                    MaximumWidthRequest="200"
                    MaximumHeightRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
           
            <!-- Mensaje de estado -->
            <Border x:Name="StatusFrame" BackgroundColor="Transparent" StrokeThickness="1" StrokeShape="RoundRectangle 40,0,0,40">
                <Border.Stroke>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="{DynamicResource GreenMedium}" Offset="0.1"/>
                        <GradientStop Color="{DynamicResource GreenDarkest}" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Stroke>
                
                <Label x:Name="StatusLabel"
                       Text="Calentando motores... ðŸ‹ï¸"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource GreenDark}"                       
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" Margin="0,10,0,5"/>
            </Border>
            
            <!-- Progreso (opcional) -->
            <ProgressBar x:Name="ProgressBar" 
                        Progress="{Binding _dataService.Progreso}"
                        ProgressColor="{DynamicResource GreenPrimary}"
                        WidthRequest="300"
                        HeightRequest="4"
                        HorizontalOptions="Center"/>
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>