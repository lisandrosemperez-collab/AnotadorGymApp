<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="AnotadorGymApp.Resources.Styles.DarkTheme">

    <Color x:Key="GreenPrimary">#7AB09F</Color>
    <Color x:Key="GreenSecondary">#486A5F</Color>

    <!-- FONDOS -->
    <Color x:Key="BackgroundColor">#2D4038</Color>
    <Color x:Key="CardBackground">#3A544B</Color>
    <Color x:Key="SurfaceColor">#486A5F</Color>
    <Color x:Key="SurfaceColorTransparent">#95759D94</Color>

    <!-- TEXTO -->
    <Color x:Key="PrimaryTextColor">#E8F5F0</Color>
    <Color x:Key="SecondaryTextColor">#A5EBD4</Color>
    <Color x:Key="DisabledTextColor">#6B7A75</Color>
    
    <!-- Éxito claro: fondo suave -->
    <Color x:Key="ErrorColor">#EF5350</Color>
    <!-- Error: Rojo más vibrante para oscuro -->
    <Color x:Key="WarningColor">#FFA726</Color>
    <!-- Advertencia: Naranja más vibrante -->
    <Color x:Key="InfoColor">#29B6F6</Color>
    <!-- Info: Azul más vibrante -->

    <!-- BORDES Y DIVISORES -->
    <Color x:Key="BorderColor">#486A5F</Color>
    <Color x:Key="DividerColor">#39554C</Color>

    <!-- SOMBRAS -->
    <Color x:Key="ShadowColor">#7AB09F</Color>

</ResourceDictionary>