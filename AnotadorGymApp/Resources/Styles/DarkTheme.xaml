<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Paleta base -->
    <Color x:Key="PrimaryColor">#3C6E71</Color>
    <!-- Verde azulado (igual que claro) -->
    <Color x:Key="SecondaryColor">#D9D9D9</Color>
    <!-- Gris claro para contraste -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <!-- Fondo oscuro principal -->
    <Color x:Key="CardBackground">#1E1E1E</Color>
    <!-- Fondo tarjetas -->
    <Color x:Key="SurfaceColor">#2A2A2A</Color>
    <!-- Fondos secundarios -->

    <!-- Texto -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <!-- Texto principal -->
    <Color x:Key="SecondaryTextColor">#CCCCCC</Color>
    <!-- Texto secundario -->
    <Color x:Key="DisabledTextColor">#666666</Color>

    <!-- Botones y acentos -->
    <Color x:Key="AccentColor">#2A4E50</Color>

    <!-- Éxito, error, advertencia -->
    <Color x:Key="SuccessColor">#81C784</Color>
    <Color x:Key="ErrorColor">#EF9A9A</Color>
    <Color x:Key="WarningColor">#FFB74D</Color>
    <Color x:Key="InfoColor">#64B5F6</Color>

    <!-- Bordes y separadores -->
    <Color x:Key="BorderColor">#444444</Color>
    <Color x:Key="DividerColor">#333333</Color>

    <!-- Sombras -->
    <Color x:Key="ShadowColor">#000000</Color>

</ResourceDictionary>