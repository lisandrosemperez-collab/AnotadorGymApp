<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="AnotadorGymApp.Resources.Styles.LightTheme">

    <!-- COLORES PRIMARIOS (aún más sutiles) -->
    <Color x:Key="GreenPrimary">#8CB8A8</Color>
    <!-- Verde pastel muy suave -->
    <Color x:Key="GreenSecondary">#C1E9DD</Color>
    <!-- Verde claro casi blanco -->

    <!-- FONDOS (diferenciados pero sutiles) -->
    <Color x:Key="BackgroundColor">#F0F5F2</Color>
    <!-- Fondo ligeramente verde -->
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <!-- Blanco puro -->
    <Color x:Key="SurfaceColor">#EDF4F1</Color>
    <Color x:Key="SurfaceColorTransparent">#B3FFFFFF</Color>
    <!-- Superficie intermedia -->

    <!-- TEXTO (menos contraste) -->
    <Color x:Key="PrimaryTextColor">#4F6D62</Color>
    <!-- Verde grisáceo oscuro SUAVE -->
    <Color x:Key="SecondaryTextColor">#6B8A7F</Color>
    <!-- Verde medio MUY SUAVE -->
    <Color x:Key="DisabledTextColor">#B0C6BC</Color>
    <!-- Verde muy claro -->

    <!-- ESTADOS (pasteles) -->
    <Color x:Key="SuccessColor">#81C784</Color>
    <!-- Verde pastel -->
    <Color x:Key="ErrorColor">#E57373</Color>
    <!-- Rojo pastel -->
    <Color x:Key="WarningColor">#FFB74D</Color>
    <!-- Naranja pastel -->
    <Color x:Key="InfoColor">#64B5F6</Color>
    <!-- Azul pastel -->

    <!-- BORDES (casi imperceptibles) -->
    <Color x:Key="BorderColor">#E0EDE7</Color>
    <!-- Borde muy tenue -->
    <Color x:Key="DividerColor">#E8F3EE</Color>

    <!-- SOMBRAS (muy sutiles) -->
    <Color x:Key="ShadowColor">#000000</Color>
</ResourceDictionary>

